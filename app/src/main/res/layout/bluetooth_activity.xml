<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/appbg"
    android:weightSum="1"
    android:baselineAligned="false"
    android:layout_alignParentBottom="false">

    <TextView
        android:id="@+id/rpm"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:text="testRPM"
        android:layout_weight="0.03"
        android:layout_marginTop="57dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:text="SpeedTest"
        android:layout_weight="0.02"
        android:layout_alignBaseline="@+id/rpm"
        android:layout_alignBottom="@+id/rpm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="RPM:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rpmPrompt"
        android:layout_above="@+id/speed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Speed:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedPrompt"
        android:layout_above="@+id/speed"
        android:layout_alignLeft="@+id/speed"
        android:layout_alignStart="@+id/speed" />

    <TextView
        android:text="Engine Code:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/engCodelbl"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/codelbl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Code Info:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codelbl"
        android:layout_marginBottom="24dp"
        android:elevation="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/engCodelbl"
        android:layout_toRightOf="@+id/rpm"
        android:layout_toEndOf="@+id/rpm"
        android:id="@+id/codenumberlbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/codelbl"
        android:layout_toEndOf="@+id/codelbl"
        android:id="@+id/codeinfolbl" />

</RelativeLayout>